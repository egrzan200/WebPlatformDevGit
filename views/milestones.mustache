<head>
    {{>header}}
</head>

<body>

      <div class="card" style="width: 100%">
            <table class="table table-hover">
                  {{#milestone}}
                        <thead>
                              <tr>
                                    <th scope="col">Milestone Name:</th>
                                    <th scope="col">Milestone date:</th>
                                    <th scope="col">Description:</th>
                                    <th scope="col">Edit Milestone</th>
                                    <th scope="col">Remove Milestone</th>
                              </tr>
                        </thead>
                        <tbody>

                              <tr class="table-active">
                                    <td>{{milestoneNameField}}</td>
                                    <td>{{milestoneDateField}}</td>
                                    <td>{{milestonedescriptionField}}</td>
                                    <td>
                                          <form action="/milestone/editMilestone" method="GET" class="form-inline">
                                                <button  type="submit" name="ID" value="{{_id}}"  class="btn btn-warning">Edit</button>
                                          </form>
                                    </td>
                                    <td>  
                                          <form action="/milestone/delete-milestone" method="POST" class="form-inline">
                                                <button  type="submit" name="ID" value="{{_id}}"  class="btn btn-danger">Delete</button>
                                          </form>
                                    </td>
                              </tr>
                              
                        </tbody>
                  {{/milestone}}
            </table> 
      </div>
</body>